# Security Environment Variables
# Copy this file to .env.local and fill in the values

# Content Security Policy
NEXT_PUBLIC_CSP_REPORT_URI=https://dexappbuilder.dexkit.com/csp-report,http://localhost:3000
NEXT_PUBLIC_CSP_REPORT_ONLY=false

# Trusted Types
NEXT_PUBLIC_TRUSTED_TYPES_ENABLED=true
NEXT_PUBLIC_TRUSTED_TYPES_POLICY=default,mui-theme,dynamic-content

# Security Headers
NEXT_PUBLIC_HSTS_MAX_AGE=31536000
NEXT_PUBLIC_HSTS_INCLUDE_SUBDOMAINS=true
NEXT_PUBLIC_HSTS_PRELOAD=true

# Cross-Origin Policies
NEXT_PUBLIC_COOP_POLICY=same-origin
NEXT_PUBLIC_COEP_POLICY=require-corp

# Rate Limiting
API_RATE_LIMIT_MAX_REQUESTS=100
API_RATE_LIMIT_WINDOW_MS=60000

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://dexkit.com,https://*.dexkit.app,https://*.dexkit.com,http://localhost:3000,http://localhost:3001

# Security Monitoring
SECURITY_MONITORING_ENABLED=true
SECURITY_LOG_VIOLATIONS=true

# Trusted Types Policies
TRUSTED_TYPES_DEFAULT_POLICY=default
TRUSTED_TYPES_MUI_POLICY=mui-theme
TRUSTED_TYPES_DYNAMIC_POLICY=dynamic-content

{
  "extends": "tsconfig/react-library.json",
  "include": ["."],
  "compilerOptions": {
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "target": "es2021",
    "lib": [
      "DOM",
      "ES6",
      "DOM.Iterable",
      "ScriptHost",
      "ES2016.Array.Include",
      "ES2021.String"
    ]
  },
  "exclude": ["dist", "build", "node_modules"]
}

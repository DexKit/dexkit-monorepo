{
  "extends": "tsconfig/react-library.json",
  "include": ["src/**/*"],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "outDir": "./dist",
    "moduleResolution": "Bundler",
    "module": "es2020",
    "rootDir": ".",
    "resolveJsonModule": true,
    "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost", "ES2016.Array.Include"]
  }
}

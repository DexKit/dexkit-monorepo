{
  "name": "@dexkit/unlock-widget",
  "version": "0.3.0",
  "license": "MIT",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "engines": {
    "node": "22.14.0"
  },
  "scripts": {
    "lint": "TIMING=1 eslint \"**/*.ts*\"",
    "build": "tsc -b",
    "dev": "tsc -w",
    "release": "yarn build && changeset publish",
    "extract": "formatjs extract",
    "generate-lang-files": "yarn extract 'src/**/*.ts*' --ignore='**/*.d.ts' --out-file lang/main.json --id-interpolation-pattern '[sha512:contenthash:base64:6]'"
  },
  "devDependencies": {
    "@types/eth-url-parser": "^1.0.3",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "tsconfig": "*",
    "typescript": "^5.4.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@dexkit/ui": "*",
    "@mycrypto/gas-estimation": "1.1.1",
    "@unlock-protocol/unlock-js": "^0.45.1",
    "eth-url-parser": "1.0.4",
    "react-qr-code": "2.0.8"
  }
}

{
  "extends": "tsconfig/react-library.json",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "global.d.ts",
    "config/**/*.json",
    "constants/compiled-lang/**/*.json",
    "constants/**/*.json"
  ],
  "exclude": ["dist", "build", "node_modules", "stories", "**/__tests__/**", "**/*.test.ts", "**/*.test.tsx", "tsup.config.ts", "../apps/**", "../../apps/**", "components/dialogs/AssetApprovalDialog.tsx"],
  "compilerOptions": {
    "composite": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "moduleResolution": "Bundler",
    "target": "es2020",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "types": [],
    "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost", "ES2016.Array.Include", "ES2021.String", "ES2022"]
  }
}

{
  "include": ["src/**/*"],
  "exclude": ["dist", "build", "node_modules"],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "moduleResolution": "bundler",
    "module": "Preserve",
    "declaration": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["DOM", "ES6", "DOM.Iterable", "ScriptHost", "ES2016.Array.Include"]
  }
}
